{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "config": {
      "projectType": "library",
      "root": "projects/config",
      "sourceRoot": "projects/config/src",
      "prefix": "sky",
      "architect": {
        "build": {
          "builder": "@skyux-sdk/angular-builders:ng-packagr",
          "options": {
            "project": "projects/config/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/config/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/config/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/config/src/test.ts",
            "tsConfig": "projects/config/tsconfig.spec.json",
            "karmaConfig": "projects/config/karma.conf.js",
            "codeCoverage": true,
            "codeCoverageExclude": [
              "**/fixtures/**",
              "projects/config/src/test.ts"
            ],
            "styles": [
              "@skyux/theme/css/sky.css",
              "@skyux/theme/css/themes/modern/styles.css"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/config/**/*.ts",
              "projects/config/**/*.html"
            ]
          }
        }
      }
    },
    "config-showcase": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "projects/config-showcase",
      "sourceRoot": "projects/config-showcase/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/config-showcase",
            "index": "projects/config-showcase/src/index.html",
            "main": "projects/config-showcase/src/main.ts",
            "polyfills": "projects/config-showcase/src/polyfills.ts",
            "tsConfig": "projects/config-showcase/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/config-showcase/src/favicon.ico",
              "projects/config-showcase/src/assets"
            ],
            "styles": [
              "node_modules/@skyux/theme/css/sky.css",
              "node_modules/@skyux/theme/css/themes/modern/styles.css",
              "projects/config-showcase/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "projects/config-showcase/src/environments/environment.ts",
                  "with": "projects/config-showcase/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "config-showcase:build:production"
            },
            "development": {
              "browserTarget": "config-showcase:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "config-showcase:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/config-showcase/src/test.ts",
            "polyfills": "projects/config-showcase/src/polyfills.ts",
            "tsConfig": "projects/config-showcase/tsconfig.spec.json",
            "karmaConfig": "projects/config-showcase/karma.conf.js",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/config-showcase/src/favicon.ico",
              "projects/config-showcase/src/assets"
            ],
            "styles": ["projects/config-showcase/src/styles.scss"],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/config-showcase/**/*.ts",
              "projects/config-showcase/**/*.html"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "config",
  "cli": {
    "defaultCollection": "@angular-eslint/schematics"
  }
}
